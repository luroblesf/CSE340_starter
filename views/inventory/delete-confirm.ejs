<h1>
    <%= title %>
</h1>

<% if (success && success.length> 0) { %>
    <div class="notice success">
        <%= success[0] %>
    </div>
    <% } %>
    
<div class="form-container">
            <div>
                <p>Confirm Deletion - The deletion is permanent.</p>
            </div>
        <form action="/inv/delete" method="post">

        <input type="hidden" name="inv_id" value="<%= itemData.inv_id %>">

        <label for="classification_id">Classification</label>
        <select id="classification_id" name="classification_id" required>
            <option value="" disabled <%=locals.classification_id ? '' : 'selected' %>>
                Select a classification
            </option>
            <% classifications.forEach(c=> { %>
                <option value="<%= c.classification_id %>" <%=locals.classification_id==c.classification_id ? 'selected' : '' %>
                    >
                    <%= c.classification_name %>
                </option>
                <% }) %>
        </select>

                <label for="inv_make">Make</label>
                <input type="text" id="inv_make" name="inv_make" value="<%= itemData.inv_make %>" readonly>
                
                <label for="inv_model">Model</label>
                <input type="text" id="inv_model" name="inv_model" value="<%= itemData.inv_model %>" readonly>
                
                <label for="inv_year">Year</label>
                <input type="text" id="inv_year" name="inv_year" value="<%= itemData.inv_year %>" readonly>
                
                <button type="submit">Delete Item</button>
                <button type="button" onclick="window.location.href='/inventory'">Cancel</button>

        </form>
</div>