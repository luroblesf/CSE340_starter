<div class="inventory-management">
  <h1>
    <%= title %>
  </h1>

  <% if (success && success.length> 0) { %>
    <div class="notice success">
      <% success.forEach(msg=> { %>
        <p>
          <%= msg %>
        </p>
        <% }) %>
    </div>
    <% } %>

      <% if (errors) { %>
        <div class="notice error">
          <% errors.forEach(error=> { %>
            <p>
              <%= error.msg %>
            </p>
            <% }) %>
        </div>
        <% } %>

          <ul>
            <li><a href="/inv/add-classification">Add New Classification</a></li>
            <li><a href="/inv/add-vehicle">Add New Vehicle</a></li>
          </ul>

          <h2>Manage Inventory</h2>
          <p>Choose a classification to see those inventory items.</p>
          <%- classificationSelect %>

          <table id="inventoryDisplay"></table>

          <noscript>JavaScript must be enabled to use this feature.</noscript>

          <script src="../../js/inventory.js"></script>

</div>