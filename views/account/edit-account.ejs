<h1>Edit Account Information</h1>

<% if (messages && messages.length) { %>
    <% messages.forEach(function(msg) { %>
        <div class="flash-message">
            <%= msg %>
        </div>
        <% }) %>
            <% } %>
            <div class="edit-account-container">
                <form action="/account/update" method="POST">
                    <div class="form-row">
                        <label for="account_firstname">First Name:</label>
                        <input type="text" id="account_firstname" name="account_firstname"
                            value="<%= accountData.account_firstname %>" required>
                    </div>

                    <div class="form-row">
                        <label for="account_lastname">Last Name:</label>
                        <input type="text" id="account_lastname" name="account_lastname"
                            value="<%= accountData.account_lastname %>" required>
                    </div>

                    <div class="form-row">
                        <label for="account_email">Email:</label>
                        <input type="email" id="account_email" name="account_email"
                            value="<%= accountData.account_email %>" required>
                    </div>

                    <button type="submit">Update</button>

                    <div class="form-row">
                        <p>Password must be at least 12 characters and contain at least one uppercase letter, one number, and one special character.
                            *note your original password will be changed.
                        </p>
                        <label for="new_password">Password:</label>
                        <input type="password" id="new_password" name="new_password" required minlength="12"
                            pattern="^(?=.*[A-Z])(?=.*\\d)(?=.*[!@#$%^&*()_+\\-\\=\\[\\]{};':\" \\\\|,.<\\/?]).{12,}$">
                        <p>Password must be minimum of 12 characters and include 1 capital letter, 1 number and 1 special character.</p>
                   
                        <button type="button" class="show-password-btn">Show Password</button>
                        <button type="submit">Change Password</button>
                    </div>
                </form>
